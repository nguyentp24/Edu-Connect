<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardBackgroundColor="#F2F3F7"
    card_view:cardCornerRadius="14dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vạch màu xanh bên trái -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#22A6F2"
            android:layout_marginRight="10dp"/>

        <!-- Bên trái: 2 mốc giờ -->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTimeStart"
                android:text="7:00 SA"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtTimeEnd"
                android:text="7:45 SA"
                android:textColor="#111827"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Bên phải: nội dung -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtSubject"
                    android:text="Toán"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtStatus"
                    android:text="Đã kết thúc"
                    android:textStyle="bold"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtClass"
                    android:text="Lớp: 12A1"
                    android:textColor="#7C3AED"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/dot_red"/>

                <TextView
                    android:id="@+id/txtAttendance"
                    android:text="Chưa điểm danh"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
