<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <!-- Top illustration -->
        <ImageView
            android:id="@+id/imgIllustration"
            android:src="@drawable/chatbot_cartoon"
            android:contentDescription="@string/login_illustration_desc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Title and subtitle -->
        <TextView
            android:id="@+id/txtTitle"
            android:text="@string/login_title"
            android:textStyle="bold"
            android:textColor="#7B1FA2"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtSubtitle"
            android:text="@string/login_subtitle"
            android:textColor="#263238"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Email field label -->
        <TextView
            android:text="@string/login_account_label"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:hint="@string/login_email_hint"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password field label -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="@string/login_password_label"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            app:endIconMode="password_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error message placeholder -->
        <TextView
            android:id="@+id/txtError"
            android:layout_marginTop="12dp"
            android:text="@string/login_error_incorrect"
            android:textColor="#D32F2F"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Primary sign in button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_marginTop="20dp"
            android:text="@string/login_sign_in"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:backgroundTint="#6A1B9A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Sign in with Google button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_marginTop="12dp"
            android:text="@string/login_sign_in_google"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:backgroundTint="#12B886"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>

    <!-- Fullscreen loading overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>
